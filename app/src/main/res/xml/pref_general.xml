<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="@string/pref_location_label"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default"
        android:inputType="number"
        android:singleLine="true"
        />
    <ListPreference
        android:title="@string/pref_units_title"
        android:key="@string/pref_units_key"
        android:dialogTitle="@string/pref_units_dialogTitle"
        android:entries="@array/pref_units"
        android:entryValues="@array/pref_unit_values"
        android:defaultValue="@string/pref_unit_defaultValue"
        />
</PreferenceScreen>